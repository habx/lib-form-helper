{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base"
  ],
  "encrypted": {
    "npmToken": ""
  },
  "npmrc": "//npm.pkg.github.com/:_authToken=${NPM_TOKEN}\n@habx:registry=https://npm.pkg.github.com/habx",
  "masterIssue": true,
  "rangeStrategy": "bump",
  "prConcurrentLimit": 5,
  "prHourlyLimit": 10,
  "enabledManagers": [
    "npm"
  ],
  "timezone": "Europe/Paris",
  "schedule": [
    "after 10pm and before 7:00am"
  ],
  "vulnerabilityAlerts": {
    "labels": [
      "security"
    ],
    "schedule": [
      "at any time"
    ],
    "prPriority": 10
  },
  "packageRules": [
    {
      "updateTypes": [
        "major",
        "minor",
        "patch"
      ],
      "depTypeList": [
        "devDependencies"
      ],
      "automerge": true,
      "labels": [
        "habx-automerge"
      ]
    },
    {
      "updateTypes": [
        "minor",
        "patch"
      ],
      "depTypeList": [
        "dependencies",
        "peerDependencies"
      ],
      "automerge": true,
      "labels": [
        "habx-automerge"
      ]
    },
    {
      "packagePatterns": [
        "^@habx/"
      ],
      "updateTypes": [
        "minor",
        "patch"
      ],
      "prPriority": 5,
      "automerge": true,
      "labels": [
        "habx-automerge"
      ],
      "schedule": [
        "at any time"
      ]
    },
    {
      "packageNames": [
        "@habx/lib-client-housing-2d",
        "@habx/lib-housing-mosaic"
      ],
      "groupName": "mosaic changes"
    },
    {
      "packageNames": [
        "three",
        "react-scripts"
      ],
      "automerge": false,
      "stabilityDays": 7
    },
    {
      "packageNames": [
        "lodash",
        "typescript",
        "lint-staged",
        "knex"
      ],
      "updateTypes": [
        "major",
        "minor",
        "patch"
      ],
      "automerge": true,
      "prPriority": -5,
      "labels": [
        "habx-automerge"
      ]
    },
    {
      "packagePatterns": [
        "^@types/",
        "^@sentry/"
      ],
      "updateTypes": [
        "major",
        "minor",
        "patch"
      ],
      "automerge": true,
      "prPriority": -10,
      "labels": [
        "habx-automerge"
      ]
    }
  ]
}