{
  "name": "@habx/lib-form-helper",
  "version": "3.2.0",
  "description": "Helpers for back-office forms",
  "main": "./dist/index.js",
  "types": "./dist/typings/index.d.ts",
  "scripts": {
    "clean": "rimraf ./dist",
    "build": "npm run clean && bili && npm run build:types",
    "build:dev": "npm run clean && tsc",
    "build:watch": "npm run clean && tsc --watch",
    "build:types": "tsc --emitDeclarationOnly",
    "postbuild": "node ./scripts/postbuild.js",
    "publish": "cd dist && npm publish && cd ..",
    "lint": "eslint \"src/**\""
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/habx/lib-form-helper.git"
  },
  "author": "Flavien DELANGLE",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/habx/lib-form-helper/issues"
  },
  "homepage": "https://github.com/habx/lib-form-helper#readme",
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "git add"
    ]
  },
  "dependencies": {
    "final-form": "^4.16.1",
    "final-form-arrays": "^3.0.1",
    "lodash": "^4.17.0",
    "react": "^16.8.1",
    "react-dom": "^16.8.1",
    "react-final-form": "^6.3.0",
    "styled-components": "^4.1.3"
  },
  "devDependencies": {
    "@habx/eslint-config-client": "^2.0.6",
    "@types/lodash": "^4.14.120",
    "@types/node": "^12.0.0",
    "@types/react": "^16.8.17",
    "@types/react-dom": "^16.8.4",
    "bili": "^4.7.4",
    "husky": "^3.0.3",
    "lint-staged": "^9.2.3",
    "rimraf": "^3.0.0",
    "rollup-plugin-multi-entry": "^2.1.0",
    "rollup-plugin-typescript2": "^0.25.1",
    "tslint-config-standard": "^8.0.1",
    "typescript": "^3.3.3"
  }
}
