{
  "name": "@habx/lib-form-helper",
  "version": "8.2.0",
  "description": "Wrappers for react-final-form",
  "sideEffects": false,
  "main": "./dist/index.cjs.js",
  "module": "./dist/esm/index.js",
  "types": "./dist/typings/index.d.ts",
  "scripts": {
    "build:cjs": "bili",
    "build:documentation": "typedoc ./src/index.ts",
    "build:esm": "tsc",
    "build:watch": "npm run clean && tsc --watch",
    "build": "npm run clean && npm run build:esm && npm run build:cjs",
    "clean": "rimraf ./dist",
    "lint": "eslint \"src/**\"",
    "test": "node --icu-data-dir node_modules/full-icu node_modules/.bin/jest --config ./jest.config.js"
  },
  "files": [
    "dist"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/habx/lib-form-helper.git"
  },
  "author": "HABX Front End team",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/habx/lib-form-helper/issues"
  },
  "homepage": "https://github.com/habx/lib-form-helper#readme",
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix"
    ]
  },
  "peerDependencies": {
    "lodash": "^4.17.21",
    "react": "^18.1.0",
    "styled-components": "^5.3.5"
  },
  "dependencies": {
    "@habx/lib-client-intl": "^2.0.0",
    "@habx/ui-core": "^6.1.0",
    "brace": "^0.11.1",
    "final-form": "^4.20.7",
    "final-form-arrays": "^3.0.2",
    "react-ace": "^10.1.0",
    "react-final-form": "^6.5.9"
  },
  "devDependencies": {
    "@habx/config-ci-front": "^2.4.0",
    "@habx/eslint-config-client": "^6.9.0",
    "@types/jest": "^27.5.1",
    "@types/lodash": "^4.14.182",
    "@types/react": "^18.0.9",
    "@types/react-router": "^5.1.18",
    "@types/styled-components": "^5.1.25",
    "bili": "^5.0.5",
    "eslint": "^8.16.0",
    "full-icu": "^1.4.0",
    "husky": "^4.3.8",
    "jest": "^28.1.0",
    "jest-environment-jsdom": "^28.1.0",
    "jest-junit": "^13.2.0",
    "lint-staged": "^12.5.0",
    "lodash": "^4.17.21",
    "react": "^18.1.0",
    "rimraf": "^3.0.2",
    "rollup-plugin-typescript2": "^0.31.2",
    "ts-jest": "^28.0.3",
    "tslib": "^2.4.0",
    "typedoc": "^0.22.17",
    "typescript": "^4.7.3"
  },
  "publishConfig": {
    "registry": "https://npm.pkg.github.com/"
  }
}
